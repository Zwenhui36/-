<!--pages/me/map/map.wxml-->
<view class="page-body">
    <view class="page-section page-section-gap">
        <map id="myMap" style="width: 100%; height: 300px;" latitude="{{latitude}}" longitude="{{longitude}}" markers="{{markers}}" covers="{{covers}}" show-location>
        </map>
    </view>
    <view class="btn-area">
        <button bindtap="moveToLocation" class="page-body-button" type="default" plain="true">当前定位</button>
    </view>
    <view class="btn-area">
        <button bindtap="moveToRoutePlan" class="page-body-button" type="default" plain="true">出行服务</button>
    </view>
</view>
