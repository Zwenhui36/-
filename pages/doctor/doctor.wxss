}
.star {
  width           : 300rpx;
  color           : #fff;
  background-color: #e7a9c3;
  animation       : scale 5s ease-in-out infinite;
  height          : 80rpx;
  line-height     : 80rpx;
  text-align      : center;
  border-radius   : 40rpx;
  box-shadow      : 0 8rpx 16rpx 0 rgba(0, 0, 0, 0.2), 0 6rpx 20rpx 0 rgba(0, 0, 0, 0.19);
}


@keyframes scale {

  0%,
  50% {
    transform: scale(1);
  }

  25%,
  75% {
    transform: scale(1.1);
  }
}
