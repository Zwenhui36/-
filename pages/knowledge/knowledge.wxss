@import '../../common/common.wxss';

/* 可移动的导航栏 */
.fix_btn {
  width: 100rpx;
  height: 100rpx;
  position: fixed;
  z-index: 10;
}


.icon {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

/*  */
.goods-tab-nav{
    display: inline-block;
    width: 33.33%;
    height: 90rpx;
    line-height: 90rpx;
    border-bottom: 1rpx solid #ededed;
    box-sizing: border-box;
    text-align: center;
    color: #76bdf7;
}
.goods-tab-nav.on{
    color: #e7a9c3;
    border-bottom: 5rpx solid #c58fa5;
}
.goods-content{
    padding-bottom: 40rpx;
    margin-left: -23rpx;
}
/* 全部 */
.hr{
  height: 5px;
  background-color: #F2F2F2;
}
.head{
    display: flex;
    flex-direction: row;
    margin: 10px;
    font-size: 13px;
    color: #999999;
}
.right{
    position: absolute;
    right: 10px;
    color: #cccccc;
}
.item{
    display:flex;
    flex-direction: row;
    margin-left: 10px;
    margin-bottom: 5px;
    margin-top: 5px;
    border-bottom: 1px solid #dbd8d8;
}
.desc{
    margin-left: 20px;
    line-height: 30px;
}
.title{
    font-weight: bold;
    
}
.count{
    display: flex;
    flex-direction: row;
    font-size: 12px;
    color: #999999;
}
.liulan{
    position: absolute;
    right:70px;
}
.pinglun{
    position: absolute;
    right:10px;
}
.swiper-item{
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    height: 150;
    width: 100%;
}
.scroll-view{
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    margin-right: 10px;
    width: 100%;
}
.page-section-spacing{
    margin-top: 60rpx;
}
.scroll-view_H{
    white-space: nowrap;
}
.scroll-view-item{
    height: 300rpx;
}
.scroll-view-item_H{
    display: inline-block;
    vertical-align: middle;
    width: 30%;
    height: 100%;
}
.text{
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
}
.hr2{
    height: 2px;
    background-color: #cccccc;
    opacity: 0.2;
}