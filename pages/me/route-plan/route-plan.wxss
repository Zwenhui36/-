page,view,scroll-view, swiper, movable- area, cover-view, text, icon, rich-text,
progress, button, checkbox-group, checkbox, form, input, label, picker,
picker-view,radio-group, slider, switch, textarea, navigator, audio, image,
video, live-player, live-pusher, open-data, web-view {
    box-sizing: border- box;
}
page {
height: 100%;
width: 100%;
}
.feature-content {
padding-right: 20px;
height: 56px;
display: flex;
justify-content: space- between;
line-height: 56px;
}
.feature-label {
font-size: 13px;
color:#222;
font-weight: bold;
}
.feature-txt {
font-size: 12px;
display:flex;
align-items: center;
color:rgba(34, 34, 34, 0.5);
}
.feature-txt-item{
    position: relative;
    padding-left: 15px;
    margin-right: 15px;
}
.border-top{
    border-top:0.5px solid rgba(0, 0, 0, 0.1);
}
.border-bottom{
    border-bottom: 0.5px solid rgba(0, 0, 0, 0.1);
}
.right-arrow {
    vertical-align: top;
    margin-left: 4px;
    width: 16px;
    height: 16px;
    }
.primary-btn {
    margin: 0 auto;
    text-align: center;
    line-height: 46px;
    cursor: pointer;
    color: #FFF;
    font-size: 16px;
    border-radius: 4px;
    background:#3875FF;
    height: 46px;
    width: 198px;
    font-weight:500;
}
.weui-actionsheet__cell {
    box-sizing: border- box;
    height:56px;
}
.map-view-container {
    display: flex;
    flex-direction: column;
    box-sizing: border-box;
    background:#F8F8F7;
    width: 100%;
    height: 100%;
}
.map-view-content{
    background: #fff;
    padding:20px 20px 0;
    margin-top: 10px;
}
.feature-container{
    padding-left: 20px;
    background:#fff;
}
.custom-icon {
    margin-right: 5px;
    width: 24px;
    height: 24px;
}
.control-btn-increase{
    top: 73px; 
}
.control-btn-decrease {
    bottom: 72px;
}
.active {
    color:#222 ;
    font-weight: 500;
}
.feature-txt-left {
    padding-right: 15px;
}
.feature-txt-left:after {
    content:'';
    height:10px;
    width: 5px;
    background: rgba(34, 34, 34, 0.1);
}
.feature-txt-right{
    padding-left: 15px;
}
    